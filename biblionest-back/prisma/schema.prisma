generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())
    createAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    email String @unique
    hash String

    firstName String?
    LastName String?

    books Book[]
    @@map("users")
}

model Book {
    id Int @id @default(autoincrement())
    createAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    title String
    description String

    userId Int
    user User @relation(fields: [userId], references: [id])

    @@map("books")
}